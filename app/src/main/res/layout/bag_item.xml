<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bag_item_ll"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_settings_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/image_settings_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/text_settings_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/image_settings_bag"
            android:gravity="center"
            android:text="新手书包"
            android:textColor="#333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/bag_invalid_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/text_settings_bag"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_settings_bag_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:textColor="#0bbe06"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/book_bag_red_dot_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/text_settings_bag_arrow"/>

    </RelativeLayout>

    <View
        android:id="@+id/divider_bag"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</LinearLayout>