<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/recyclerview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RecyclerView测试"/>

            <Button
                android:id="@+id/swiperefreshlayout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SwipeRefreshLayout测试"/>

            <Button
                android:id="@+id/viewpager_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewPager测试"/>

            <Button
                android:id="@+id/viewflipper_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewFlipper测试"/>

            <Button
                android:id="@+id/volley_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volley测试"/>

            <Button
                android:id="@+id/navigation_drawer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DrawerLayout测试"/>
            <Button
                android:id="@+id/fresco_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fresco测试"/>
            <Button
                android:id="@+id/image_loader_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ImageLoader测试"/>
            <Button
                android:id="@+id/picasso_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="picasso测试"/>
            <Button
                android:id="@+id/glide_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="glide测试"/>
            <Button
                android:id="@+id/RxJava_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RxJava测试"/>
            <Button
                android:id="@+id/permiss_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Permission测试"/>
            <Button
                android:id="@+id/baidu_map_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="百度地图测试"/>
            <Button
                android:id="@+id/material_design_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MaterialDesign测试"/>
            <Button
                android:id="@+id/download_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载测试"/>
            <Button
                android:id="@+id/notification_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification测试"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
